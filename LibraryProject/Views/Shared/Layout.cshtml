
@{
    ViewBag.Title = "Layout";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
body {font-family: "Lato", sans-serif;}

.sidebar {
  height: 100%;
  width: 240px;
  position: fixed;
  z-index: 1;
  top: 0;
  left: 0;
  background-color: #111;
  overflow-x: hidden;
  padding-top: 16px;
}

.sidebar a {
  padding: 10px 14px 10px 10px;
  text-decoration: none;
  font-size: 20px;
  color: white;
  display: block;
}

.sidebar a:hover {
  color: #0094ff;
}

.main {
  margin-left: 240px; /* Same as the width of the sidenav */
  padding: 0px 10px;
}

@@media screen and (max-height: 450px) {
  .sidebar {padding-top: 15px;}
  .sidebar a {font-size: 18px;}
}
    </style>
</head>
<body>

    <div class="sidebar">
        <a href="/Category/Index"><i class="glyphicon glyphicon-list"></i> &nbsp; Categories</a>
        <a href="/Book/Index/"><i class="glyphicon glyphicon-book"></i> &nbsp; Book</a>
        <a href="/Author/Index/"><i class="glyphicon glyphicon-pencil"></i> &nbsp; Authors</a>
        <a href="/Users/Index/"><i class="glyphicon glyphicon-user"></i> &nbsp; Users</a>
        <a href="/Staff/Index/"><i class="glyphicon glyphicon-tower"></i> &nbsp; Staff</a>
        @if (User.IsInRole("A"))
        {
            <a href="/Lend/Lending/"><i class="glyphicon glyphicon-circle-arrow-right"></i> &nbsp; Lend a Book</a>
            <a href="/Lend/Index/"><i class="glyphicon glyphicon-circle-arrow-left"></i> &nbsp; Borrow a Book</a>
        }
        <a href="/Statictis/Index/"><i class="glyphicon glyphicon-sort"></i> &nbsp; Statictis</a>
        <a href="/Operations/Index/"><i class="glyphicon glyphicon-dashboard"></i> &nbsp; Operations</a>
        <a href="/Statictis/Gallery/"><i class="glyphicon glyphicon-picture"></i> &nbsp; Gallery</a>
        <a href="/Statictis/LinqCard/"><i class="glyphicon glyphicon-bookmark"></i> &nbsp; Linq Cards</a>
        <a href="/ShowCase/Index/"><i class="glyphicon glyphicon-gift"></i> &nbsp; Show Case</a>
        <a href="/Settings/Index2/"><i class="glyphicon glyphicon-cog"></i> &nbsp; Settings</a>
        <a href="/Panel/LogOut"><i class="glyphicon glyphicon-log-out"></i> &nbsp; Exit</a>


    </div>

    <div class="main">
       @RenderBody()
    </div>

</body>
</html> 