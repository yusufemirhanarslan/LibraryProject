@using LibraryProject.Models.Entity
@model List<Tbl_Action>
@{
    ViewBag.Title = "MyBooks";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}
<h2>My Book List</h2>
<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">

    <section class="content">

        <div class="container-fluid">

            <div class="row">
                <!-- /.col -->

                <div class="col-md-12">

                    <div class="card">

                        <div class="card-header p-2">
                        </div><!-- /.card-header -->

                        <div class="card-body">

                            <div class="tab-pane" id="timeline">

                                <!-- The timeline -->

                                <div class="timeline timeline-inverse">

                                    <!-- timeline time label -->

                                    @foreach (var item in Model)

                                    {

                                        <div class="time-label">

                                            <a class="btn btn-success">

                                                <span class="bg-success">

                                                    @(((DateTime)item.Ship_Date).ToString("dd-MMM-yyyy"))

                                                </span>

                                            </a>

                                            -----

                                            <a class="btn btn-warning">

                                                <span class="bg-warning">

                                                    @(((DateTime)item.Delivery_Date).ToString("dd-MMM-yyyy"))

                                                </span>

                                            </a>

                                        </div>

                                        <!-- /.timeline-label -->

                                        <!-- timeline item -->

                                        <div>

                                            @*<i class="fas fa-comment bg-primary"></i>*@

                                            <div class="timeline-item">

                                                <div class="timeline-body">

                                                    @item.Tbl_Book.Name

                                                </div>

                                                @*<div class="timeline-footer">

                                                        <a href="#" class="btn btn-primary btn-sm">Düzenle</a>

                                                        <a href="#" class="btn btn-danger btn-sm">Sil</a>

                                                    </div>*@

                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

